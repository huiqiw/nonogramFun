<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uw.cse403.nonogramfun"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="uw.cse403.nonogramfun.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uw.cse403.nonogramfun.CreateGame"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.CREATEGAME" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uw.cse403.nonogramfun.HowToPlay"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="uw.cse403.nonogramfun.PlayGameMenu"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="uw.cse403.nonogramfun.Settings"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="uw.cse403.nonogramfun.CreateGameSmall"
            android:label="@string/title_activity_create_game_small" >
        </activity>
        <activity
            android:name="uw.cse403.nonogramfun.CreateGameMedium"
            android:label="@string/title_activity_create_game_medium" >
        </activity>
        <activity
            android:name="uw.cse403.nonogramfun.CreateGameLarge"
            android:label="@string/title_activity_create_game_large" >
        </activity>
        <activity
            android:name="uw.cse403.nonogramfun.CreateGameMenu"
            android:label="@string/title_activity_create_game_menu" >
        </activity>
        <activity
            android:name="uw.cse403.nonogramfun.CreateGameScreen"
            android:label="@string/title_activity_create_game_screen" >
        </activity>
    </application>

</manifest>